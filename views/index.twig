{% extends "main.twig" %}
{% block title %}
Login |
{{ parent() }}
{% endblock %}
{% block navbar %}{% endblock %}    {# con esto anulo en esta vista a navbar #}

{# bloque de estilos #}
{% block styles %}
<style>
  body{
    background-image: var(--background_img_login);
  }
  .vista{
    width: 100vw;
    height: 90vh;
    display: flex;
    justify-content: center;
    align-items: center;

  }
  
  .login_container{
    color: var(--text_glass_color_dark);
    display: inherit;
    flex-direction: column;
    align-items: center;

    width: 300px;
  }

  form{
    display: inherit;
    flex-direction: column;

    width: 90%;
  }

  small{
    padding: 20px 0 0 0;
  }
  small a{
    color: var(--text_glass_color_dark);
    text-decoration: none;
  }
  hr{
    color: var(--text_glass_color_dark);
    width: 100%;
  }

  @media only screen and (max-width: 600px) {
    .login_container{
      width: 90vw;
    }
  }
</style>
{% endblock styles %}

{# bloque del contenido de cada vista #}
{% block contenido %}
<div class=" vista">
  <div class="login_container cristal_background">
    <h2 class="text-center">Bienvenido</h2>
    <hr>
    <form action="/" method="post">
      <input type="text" name="user_name" placeholder="Username" required>
      <input type="password" name="password" placeholder="Password" required>
      <input type="submit" value="LOGIN" class="btn btn-danger ">
    </form>
    <small><a href="">Forgot password?</a></small>
    <small><a href="/signup">Signup</a></small>
  </div>
</div>
{% autoescape "html" %}
  {{ responseMessage|raw }}
{% endautoescape %}
{% endblock contenido %}

{% block scripts %}
{{ closeAlert|raw }}
{% endblock scripts %}