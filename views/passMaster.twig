{% extends "main.twig" %}
{% block title %}
Cambiar contraseña master del sistema |
{{ parent() }}
{% endblock title %}

{# bloque de estilos #}
{% block styles %}
<style>
    .vista{
        color: var(--text_color_light);
        width: 100%;
        height: 90vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .passMaster_container{
        display: inherit;
        flex-direction: column;
        text-align: center;

        width: 500px;
    }
    a{
        text-decoration: none;
        color: var(--text_color_light);
    }
    form{
        display: inherit;
        flex-direction: inherit;
    }
</style>
{% endblock styles %}

{% block contenido %}
<div class="container vista">
    <div class="passMaster_container cristal_background">
        <h1>Modifica la contraseña master</h1>
        <h2><a href="/dashboard">Ir a Dashboard</a></h2>
        <form action="/password-master" method="POST">
            <input type="password" name="passMaster" id="passMaster" required placeholder="Ingresa la contraseña" required>
            <input type="submit" value="Guardar" class="btn btn-primary ">
        </form>
    </div>
</div>
{% autoescape "html" %}
  {{ responseMessage|raw }}
{% endautoescape %}

{% endblock contenido %}

{% block scripts %}
{{ closeAlert|raw }}
{% endblock scripts %}