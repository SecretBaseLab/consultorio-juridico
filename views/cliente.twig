{% extends "main.twig" %}
{% block title %}
Nuevo Cliente |
{{ parent() }}
{% endblock %}
{# bloque de estilos #}
{% block styles %}
<style>
    .vista{
        width: 100%;
        margin-top: var(--altura_navbar);
    }
    .row{
        width: 100%;
        margin: 0;
        padding: 0;
    }
    .cliente_container{
        color: var(--text_glass_color_dark);
    }

    .cliente_datos_container{
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .cliente_datos{
      display: inherit;
      flex-direction: inherit;
      justify-content: inherit;
      align-items: inherit;
      margin: 10px;
      padding: 20px;
      width: 90%;
    }
</style>
{% endblock styles %}

{# bloque del contenido de cada vista #}
{% block contenido %}
<div class="vista">
  <div class="cliente_container ">
    <div class="row">
      <div class="col-md-6">
        <div class="cliente_datos_container">
          <div class="cliente_datos cristal_background">
            <h2>Datos del cliente</h2>
            <h4>Cédula:</h4>
            <p>{{cliente.cedula}}</p>
            <h4>Nombres:</h4>
            <p>{{cliente.nombres}} {{ cliente.apellidos }}</p>
            <h4>Direccion:</h4>
            <p>{{cliente.direccion}}</p>
            <h4>Mas información:</h4>
            <p>{{cliente.otros}}</p>
            <h4>Fecha de registro:</h4>
            <p>{{cliente.created_at}}</p>
            <h4>Telefono:</h4>
            <p>
            {% for row, telefono in telefono_cliente %}
            {{telefono.numero}}
            {% endfor %}
            </p>
            <h4>Correo:</h4>
            <p>
            {% for row, correo in correo_cliente %}
            {{correo.correo}}
            {% endfor %}            
            </p>                                
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <a href="/expediente/add/{{cliente.cedula}}" class="btn btn-danger form-control">Nuevo Expediente</a>
        <table class="table table-light table-striped table-hover table-sm table-responsive">
          <thead>
            <tr>
              <th scope="col">Tipo</th>
              <th scope="col">Estado</th>
              <th scope="col">Fecha Inicio</th>
              <th scope="col" colspan="2">Acciones</th>
            </tr>
          </thead>
          <tbody>
            {% for row, expediente in expediente_local %}
            <tr>
              <td>{{expediente.tipo}}</td>
              <td>{{expediente.estado}}</td>
              <td>{{ expediente.created_at|date('Y-m-d') }}</td>
              <td><i class="fa-solid fa-eye"></i></td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
    
  </div>
</div>

{% endblock contenido %}

{% block jquery %}
{% endblock jquery %}

{% block scripts %}
{% endblock scripts %}

{% block scriptTooltip %}
{% endblock scriptTooltip %}
