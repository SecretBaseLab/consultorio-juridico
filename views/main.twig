<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %} ESTUDIO JURÍDICO GONZÁLEZ GARCÍA & GONZÁLEZ TEJADA {% endblock %}</title>
    <meta name="description" content="Proyecto ERP de un consultorio" >

    <link rel="stylesheet" href="/public/assets/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/7a242c6f89.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/public/assets/css/assets.css">

    {# bloque de estilos #}
    {% block styles %}{% endblock styles %}
</head>

<body>

    {# bloque de navbar #}
    {% block navbar %}
    <nav class="navbar  navbar-light bg-light fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard"><i class="fa-solid fa-house"></i></a>

            <div class="navbar-nav">
                <a class="nav-link" data-bs-toggle="offcanvas" href="#offcanvasWithBackdrop" role="button" aria-controls="offcanvasWithBackdrop"><i class="fa-solid fa-bars"></i></a>
                <a class="nav-link" aria-current="page" href="/logout"><i class="fa-solid fa-right-from-bracket"></i></a>

            </div>
        </div>
    </nav>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasWithBackdrop" aria-labelledby="offcanvasWithBackdropLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasWithBackdropLabel">Menu</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <p>.....</p>
        </div>
    </div>
    {% endblock navbar %}
    
    {# bloque del contenido de cada vista #}
    {% block contenido %}

    {% endblock contenido %}

    {# bloque de pie de pagina #}
    {% block footer %}

    {% endblock footer %}

    <script src="/public/assets/js/bootstrap.min.js"></script>
    
    {% block jquery %}
		<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    {% endblock jquery %}

    {% block scripts %}

    {% endblock scripts %}

    {% block scriptTooltip %}
        <script>
            const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
            const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
        </script>
    {% endblock scriptTooltip %}
</body>

</html>